    function AddToCart(ProductId) {
        console.log(ProductId)
        $.ajax({
            url: "/Cart/AddToCart",
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({
                ProductId: ProductId,
            }),
            success: function (response) {
                if (response.error) {
                    console.error(response.error);
                } else {
                    $("#quantity").html(response);
                }
            },
            error: function (err) {
                console.error(err);
            }
        });
    }


@{
    ViewData["Title"] = "Order Items";
}

@model List<GroceryStore.Models.OrderItemModel>;

<link rel="stylesheet" href="~/css/orderitems.css" />

<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #a8729a;">Order Details</p>
                        </div>
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="mb-0 small">Name</p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="mb-0 small">Quantity</p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="mb-0 small">Unit Price</p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="mb-0 small">Total Price</p>
                                    </div>
                                </div>
                            </div>                            
                        </div>
                        <div class="card shadow-0 border mb-4">
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="mb-0 small">@Model[i].Name</p>
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="mb-0 small">@Model[i].Quantity</p>
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="mb-0 small">@Model[i].UnitPrice</p>
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="mb-0 small">@Model[i].TotalPrice</p>
                                        </div>
                                    </div>
                                </div>
                            }                            
                        </div>                        
                    </div>
                    <div class="card-footer border-0 px-4 py-3" style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-dark text-white text-uppercase rounded-pill px-3 py-2" asp-controller="Order" asp-action="GetOrders">
                                ❮ Back
                            </a>
                            <h5 class="text-white text-uppercase mb-0">
                                Total paid: <span class="h3 ms-2">₹@Model[0].TotalOrder</span>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(".hBack").on("click", function (e) {
        e.preventDefault();
        window.history.back();
    });

    function hback() {
        // e.preventDefault();
        window.history.back();
    }
</script>